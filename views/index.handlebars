<div class="container">
    <div class="jumbotron">
        <h1>Eat the Burger!</h1>
        <form class="create-form">
            <div class="form-group">
                <label for="new-burger">Order a Burger!</label>
                <input type="text" id="new-burger" name="burger">
                <button type="submit" class="btn btn-primary" id="addburger">Submit</button>
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Eat
            </button>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="deleteburger btn btn-warning" id="deletebutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Delete
            </button>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>